{
  "name": "restaurant-chatbot",
  "version": "1.0.0",
  "description": "A restaurant chatbot for placing orders with Paystack payment integration",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && npm run copy-public",
    "copy-public": "node -e \"require('fs').cpSync('./src/public', './dist/public', {recursive: true})\"",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "seed": "node dist/seed/menu.seed.js"
  },
  "keywords": [
    "restaurant",
    "chatbot",
    "paystack",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "axios": "^1.6.2",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^8.0.3",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": "20.x"
  }
}
